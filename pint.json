{
    "preset": "laravel",
    "rules": {
        "class_attributes_separation": {
            "elements": {
                "const": "none",
                "method": "one",
                "property": "none",
                "trait_import": "none",
                "case": "one"
            }
        },
        "concat_space": {
            "spacing": "one"
        },
        "no_spaces_after_function_name": true,
        "spaces_inside_parentheses": false,
        "function_declaration": {
            "closure_function_spacing": "none"
        }
    }
}
